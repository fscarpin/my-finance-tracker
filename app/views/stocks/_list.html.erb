<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.last_price %></td>

        <% confirm_msg = "Are you sure you want to remove #{stock.name} stock from your portfolio?" %>
        <td>
          <%= link_to user_stock_path(@user_stocks.find_by(stock_id: stock.id)), method: :delete, data: {confirm: confirm_msg}, class: "btn btn-danger btn-sm" do %>
            <i class="fa fa-trash"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
